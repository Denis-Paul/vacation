<h1>Welcome to vacation planning application</h1>
<p>You can find your next vacation destination here!</p>

<% if user_signed_in? %>
    <p>Logged in as: <%= current_user.email %></p>
    <br>
    <h3>Available destinations</h3>
    <table>
        <thead>
            <tr>
            <th>City</th>
            <th>Country</th>
            <th>Currency</th>
            <th>Current Weather</th>
            <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @destinations.each do |destination| %>
            <tr>
                <td><%= destination.city %></td>
                <td><%= destination.country %></td>
                <td><%= destination.currency %></td>
                <td>-</td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <%= form_tag filter_destinations_path, method: :get do %>
            <%= text_field_tag :country, params[:country], placeholder: 'Filter country' %>
            <%= button_tag type: :submit, class: "btn btn-outline-success" do %>
                <%= 'Filter' %> 
            <% end %>
    <% end %>
    <br>
    <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
    <br>

<% else %>
    <p>Please sign in to get the best of our application</p>
    <%= link_to 'Sign In', new_user_session_path %>
<% end %>