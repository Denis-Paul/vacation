<div class="container">
    <h1>Welcome to vacation planning application</h1>
    <p>You can find your next vacation destination here!</p>

    <% if user_signed_in? %>
        <p>Logged in as: <%= current_user.email %></p>
        <br>
        <h3>Available destinations</h3>
        <table>
            <thead>
                <tr>
                <th>City</th>
                <th>Country</th>
                <th>Currency</th>
                <th>Current Weather</th>
                <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
                <% @destinations.each do |destination| %>
                <tr>
                    <td><%= destination.city %></td>
                    <td><%= destination.country %></td>
                    <td><%= destination.currency %></td>
                    <td>-</td>
                    <td><%= button_to 'Add to favorites', favorites_path(id: destination.id), id: 'add_favorite', method: :create, remote: true, class: 'btn btn-primary' %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <br>
        <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
        <br>
        <%= link_to 'Favorites', favorites_path %>
    <% else %>
        <p>Please sign in to get the best of our application</p>
        <%= link_to 'Sign In', new_user_session_path %>
    <% end %>
</div>
